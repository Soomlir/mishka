{% extends '../common/layout.twig' %}

{% set isCatalog = true %}

{% block main %}
	<main>
		<section class="products">
			<h1 class="products__title">Каталог товаров</h1>
			<ul class="products__list">
				<li class="products__item">
					<picture>
						<source media="(min-width: 1150px)" srcset="img/products-1-desktop.jpg" width="315" height="462">
						<source media="(min-width: 768px)" srcset="img/products-1-tablet.jpg" width="334" height="334">
						<img class="products__image" src="img/products-1.jpg" width="260" height="195" alt="Зайчик-попрыгайчик.">
					</picture>
					<div class="products__item-wrapper">
						<h2 class="products__heading">
							<a class="products__link" href="#!">
								Зайчик-попрыгайчик
							</a>
						</h2>
						<p class="products__attributes">Рост 30 см, вес 200 г</p>
						<div class="products__buy">
							<p class="products__price">1 200 руб.
								<a class="products__cart-link" href="#!">
									<span class="visually-hidden">Купить</span>
								</a>
							</p>
						</div>
					</div>
				</li>
				<li class="products__item">
					<picture>
						<source media="(min-width: 1150px)" srcset="img/products-2-desktop.jpg" width="315" height="462">
						<source media="(min-width: 768px)" srcset="img/products-2-tablet.jpg" width="334" height="334">
						<img class="products__image" src="img/products-2.jpg" width="260" height="195" alt="Корзинка для белья.">
					</picture>
					<div class="products__item-wrapper">
						<h2 class="products__heading">
							<a class="products__link" href="#!">
								Корзинка для белья
							</a>
						</h2>
						<p class="products__attributes">Диаметр 15 см, высота 10 см</p>
						<div class="products__buy">
							<p class="products__price">690 руб.
								<a class="products__cart-link products__cart-link--indent" href="#!">
									<span class="visually-hidden">Купить</span>
								</a>
							</p>
						</div>
					</div>
				</li>
				<li class="products__item">
					<picture>
						<source media="(min-width: 1150px)" srcset="img/products-3-desktop.jpg" width="315" height="462">
						<source media="(min-width: 768px)" srcset="img/products-3-tablet.jpg" width="334" height="334">
						<img class="products__image" src="img/products-3.jpg" width="260" height="195" alt="Большая корзинка для игрушек.">
					</picture>
					<div class="products__item-wrapper">
						<h2 class="products__heading">
							<a class="products__link" href="#!">
								Большая корзинка<br>для игрушек
							</a>
						</h2>
						<p class="products__attributes">Диаметр 30 см, высота 30 см</p>
						<div class="products__buy">
							<p class="products__price products__price--indent">1 500 руб.
								<a class="products__cart-link" href="#!">
									<span class="visually-hidden">Купить</span>
								</a>
							</p>
						</div>
					</div>
				</li>
			</ul>
		</section>

		<article class="production">
			<h2 class="production__heading">Процесс производства</h2>
			<div class="production__video">
				<button class="production__video-control" type="button">
					<span class="visually-hidden">Проиграть видео.</span>
				</button>
			</div>
			<div class="production__info">
				<p class="production__text">
					По просьбам наших любимых фолловеров мы сняли для вас подробное видео о том,
					как появляются наши товары.
				</p>
				<a class="production__add-order button" href="form.html">Сделать заказ</a>
			</div>
		</article>
	</main>
{% endblock %}
